import matplotlib.pyplot as plt

# Choose index of the image to display
index = 0

# Prepare grayscale, predicted, and original images
gray_img = x_test_gray.numpy()[index].reshape(32, 32)
predicted_img = predicted_color[index]
original_img = x_test[index]

# Create a plot
plt.figure(figsize=(9, 3))

# Grayscale image
plt.subplot(1, 3, 1)
plt.imshow(gray_img, cmap='gray')
plt.title("Grayscale")
plt.axis("off")

# Colorized (predicted) image
plt.subplot(1, 3, 2)
plt.imshow(predicted_img)
plt.title("Colorized")
plt.axis("off")

# Original image
plt.subplot(1, 3, 3)
plt.imshow(original_img)
plt.title("Original")
plt.axis("off")

plt.tight_layout()
plt.show()
